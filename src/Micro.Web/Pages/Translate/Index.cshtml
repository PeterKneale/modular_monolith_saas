@page "/org/{org}/projects/{project}/translate"
@model Micro.Web.Pages.Translate.Index

<div class="card mb-2">
    <div class="card-header">
        <span class="float-end">
            Total Terms: <strong>@Model.Results.TotalTerms</strong>
        </span>
        <h5>Terms</h5>
    </div>
    <div class="card-body">
        <div class="card mb-2">
            <div class="card-body">
                <a asp-page="Terms"
                   asp-route-org="@Model.RouteOrg"
                   asp-route-project="@Model.RouteProject"
                   class="card-link">
                    View Terms
                </a>
                <a asp-page="AddTerm"
                   asp-route-org="@Model.RouteOrg"
                   asp-route-project="@Model.RouteProject"
                   class="btn btn-primary ms-2 float-end">
                    Add Term
                </a>
                <a asp-page="ImportTerms"
                   asp-route-org="@Model.RouteOrg"
                   asp-route-project="@Model.RouteProject"
                   class="btn btn-primary float-end">
                    Import Terms
                </a>
            </div>
        </div>
    </div>
</div>
<div class="card mb-2">
    <div class="card-header">
        <span class="float-end">
            <a asp-page="AddLanguage"
               asp-route-org="@Model.RouteOrg"
               asp-route-project="@Model.RouteProject"
               class="btn btn-primary">
                Add Language
            </a>
        </span>
        <h5>Translations</h5>
    </div>
    <div class="card-body">
        @foreach (var item in Model.Results.Statistics)
        {
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="card-title">
                        @if (item.Number > 0)
                        {
                            <a class="btn btn-secondary btn-sm float-end ms-2" asp-page-handler="DownloadCsv" asp-route-languageId="@item.Id">Download CSV</a>
                            <a class="btn btn-secondary btn-sm float-end" asp-page-handler="DownloadResX" asp-route-languageId="@item.Id">Download RESX</a>
                        }
                        @item.Code @item.Percentage%
                    </h5>
                    <p class="card-text">
                        <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                            <div class="progress-bar" style="width: @(item.Percentage)%"></div>
                        </div>
                    </p>
                </div>
                <div class="card-body">
                    <a class="card-link" asp-page="Translations"
                       asp-route-org="@Model.RouteOrg"
                       asp-route-project="@Model.RouteProject"
                       asp-route-languageId="@item.Id">
                        View Translations
                    </a>
                </div>
            </div>
        }
    </div>
</div>