@page "/org/{org}/projects/{project}/translate"
@using Newtonsoft.Json
@model Micro.Web.Pages.Translate.Index
@inject IPageContextAccessor Context;

<div class="card mb-2">
    <div class="card-header">
        <span class="float-end">
            Total Terms: <strong>@Model.Results.TotalTerms</strong>
        </span>
        <h5>Terms</h5>
    </div>
    <div class="card-body">
        <div class="card mb-2">
            <div class="card-body">
                <a asp-page="Terms"
                   asp-route-org="@Context.Organisation.Name"
                   asp-route-project="@Context.Project.Name"
                   class="card-link">
                    View Terms
                </a>
                <a asp-page="AddTerm"
                   asp-route-org="@Context.Organisation.Name"
                   asp-route-project="@Context.Project.Name"
                   class="btn btn-primary float-end">
                    Add Term
                </a>
            </div>
        </div>
    </div>
</div>
<div class="card mb-2">
    <div class="card-header">
        <span class="float-end">
            <a asp-page="AddLanguage"
               asp-route-org="@Context.Organisation.Name"
               asp-route-project="@Context.Project.Name"
               class="btn btn-primary">
                Add Language
            </a>
        </span>
        <h5>Translations</h5>
    </div>
    <div class="card-body">
        <h5 class="card-title">Languages</h5>
        @foreach (var item in Model.Results.Statistics)
        {
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="card-title">
                        @item.LanguageId @item.Percentage%
                    </h5>
                    <p class="card-text">
                        <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                            <div class="progress-bar" style="width: @item.Percentage%"></div>
                        </div>
                    </p>
                </div>
                <div class="card-body">
                    <a class="card-link" asp-page="Translations"
                       asp-route-org="@Context.Organisation.Name"
                       asp-route-project="@Context.Project.Name"
                       asp-route-languageId="@item.LanguageId">
                        View Translations
                    </a>
                </div>
            </div>
        }
    </div>
</div>