@page
@model Micro.Web.Pages.Auth.Reset

<partial name="_ValidationSummary"/>

<form method="post" class="card">
    <div class="card-body">
        <editor for="Password"/>
        @Html.HiddenFor(x => x.UserId)
        @Html.HiddenFor(x => x.Token)
    </div>
    <div class="card-footer">
        <div class="d-flex">
            <input type="submit" value="Reset Password" class="btn btn-primary ms-auto" data-testid="ForgotButton"/>
        </div>
    </div>
</form>