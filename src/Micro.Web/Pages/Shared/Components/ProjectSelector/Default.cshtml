@model Model

@if (Model.Show)
{
    <div data-testid="ProjectSelector">
        <form class="d-flex align-items-center">
            <div class="input-group input-group-sm">
                <span class="input-group-text">Project</span>
                <button class="btn btn-outline-secondary dropdown-toggle"
                        type="button"
                        data-bs-toggle="dropdown"
                        aria-expanded="false"
                        data-testid="ProjectSelectorActivationButton">
                    @if (Model.CurrentProject != null)
                    {
                        <span data-testid="ProjectSelectorSelected">@Model.CurrentProject.ProjectName</span>
                    }
                    else
                    {
                        <span>Select project</span>
                    }
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    @if (Model.CurrentProject != null)
                    {
                        <li>
                            <a class="dropdown-item" asp-page="/Project/Details" asp-route-org="@Model.OrganisationName" asp-route-project="@Model.CurrentProject.ProjectName">
                                Details
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-page="/Translate/Index" asp-route-org="@Model.OrganisationName" asp-route-project="@Model.CurrentProject.ProjectName">
                                Translate
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                    }
                    @foreach (var item in Model.Projects)
                    {
                        <li>
                            <a class="dropdown-item" asp-page="/Project/Details" asp-route-org="@Model.OrganisationName" asp-route-project="@item.ProjectName" data-testid="ProjectSelectorOption">@item.ProjectName</a>
                        </li>
                    }
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <a class="dropdown-item" asp-route-org="@Model.OrganisationName" asp-page="/Projects/Create">Create new project</a>
                    </li>
                </ul>
            </div>
        </form>
    </div>
}